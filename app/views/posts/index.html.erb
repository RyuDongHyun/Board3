<h1>게시판</h1>
<a href=/posts/new><button type="button" class="btn btn-outline-primary">새글쓰기</button></a>
<h1><br></h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">번호</th>
      <th scope="col">제목</th>
      <th scope="col">작성자</th>
      <th scope="col">작성된 시간</th>
    </tr>
  </thead>
  <tbody>
      <% @posts.reverse.each do |p|%>
    <tr>
      <th scope="row"><%= p.id%></th>
      <td><a href="posts/show/<%= p.id%>"><%= p.title%></a></td>
      <td><%= p.name%></td>
      <td><%= ((Time.now-p.created_at)/60).round.to_s%>분전</td>
    </tr>
    <% end%>
  </tbody>
</table>
